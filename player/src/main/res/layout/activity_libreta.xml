<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="false"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/tile"
        android:scaleType="fitXY" />
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="false"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sombra"
            android:scaleType="fitXY" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="0dp"

        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/libreta"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingBottom="60dp"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold"
                    android:text="@string/Green"
                    android:textColor="#000000"
                    android:textSize="24dp"/>
                <TextView
                    android:id="@+id/brown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold"
                    android:text="@string/Brown"
                    android:textSize="24dp"/>
                <TextView
                    android:id="@+id/golden"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold"
                    android:text="@string/Golden"

                    android:textSize="24dp"/>
                <TextView
                    android:id="@+id/navy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold"
                    android:text="@string/Navy"

                    android:textSize="24dp"/>
                <TextView
                    android:id="@+id/gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold"
                    android:text="@string/Gray"

                    android:textSize="24dp"/>
                <TextView
                    android:id="@+id/violet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="@string/Violet"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold"
                    android:textSize="24dp"/>
                <TextView
                    android:id="@+id/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="@string/Black"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold"
                    android:textSize="24dp"/>
                <TextView
                    android:id="@+id/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginBottom="10dp"
                    android:text="@string/White"
                    android:textStyle="bold"
                    android:textSize="24dp"/>


            </LinearLayout>

        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/volver"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:layout_weight="0.5"
                app:srcCompat="@drawable/volver"/>

            <ImageView
                android:id="@+id/mapa"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:layout_weight="0.5"
                app:srcCompat="@drawable/vermapa"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
</FrameLayout>